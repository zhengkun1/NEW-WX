  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1.5rem;
}
.userinfo {
  display: flex;
}
.icon {
  display: flex;
  flex: 4;
  margin:0.5rem;
}
.attention {
  margin: 0.5rem;
  border: 1px solid white;
  background-color: greenyellow;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.username {
  margin-left: 0.5rem;
}
.comment {
  height: 1.5rem;
  width: 1.5rem;
  margin: 0.5rem
}
.input {
  border: 1px solid whitesmoke;
  margin-right: 1.2rem;
}
.collect {
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  border-top: 1px solid whitesmoke;
  justify-content: center;
  align-items: center;
}
.button {
  height: 1rem;
  width: 2.5rem;
  font-size: 0.5rem
}
